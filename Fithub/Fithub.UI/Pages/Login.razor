@page "/login"

<div class="col-md-6 offset-md-3 mt-5">
    <div class="card">
        <h4 class="card-header">Login</h4>
        <div class="card-body">
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <EditForm Model="@credentials" OnValidSubmit="HandleValidSubmit">
                        <DataAnnotationsValidator />
                        <div class="form-group">
                            <label>Username</label>
                            <InputText @bind-Value="credentials.Username" class="form-control" />
                            <ValidationMessage For="@(() => credentials.Username)" />
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <InputText @bind-Value="credentials.Password" type="password" class="form-control" />
                            <ValidationMessage For="@(() => credentials.Password)" />
                        </div>
                        <button class="btn btn-primary">
                            @if (loading)
                            {
                                <span class="spinner-border spinner-border-sm mr-1"></span>
                            }
                            Login
                        </button>
                        @if (!string.IsNullOrEmpty(error))
                        {
                            <div class="alert alert-danger mt-3 mb-0">@error</div>
                        }
                    </EditForm>
                </li>
                <li class="list-group-item">
                    <a href="register" class="card-link">Register</a>
                    <a href="#" class="card-link">Forgotten password</a>
                </li>
            </ul>
        </div>
    </div>
</div>
